@model Rent


<h2>Nova Locação</h2>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes">
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VeiculoId">Veículo</label>
        <select asp-for="VeiculoId" class="form-control" asp-items="ViewBag.Veiculos"></select>
        <span asp-validation-for="VeiculoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataRetirada">Data de Retirada</label>
        <input asp-for="DataRetirada" class="form-control" type="date" />
        <span asp-validation-for="DataRetirada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataDevolucaoPrevista">Data de Devolução Prevista</label>
        <input asp-for="DataDevolucaoPrevista" class="form-control" type="date" />
        <span asp-validation-for="DataDevolucaoPrevista" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Criar Locação</button>


</form>




