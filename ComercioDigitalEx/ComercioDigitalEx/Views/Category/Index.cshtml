@model List<Category>

    <div class="container">
        <div class="row align-items-center mb-1">
            <div class="col-10">
                <h1>Manage Categories</h1>
            </div>
            <div class="col">
                <!-- adicionar categoria -->
                <a asp-controller="Category" asp-action="Add" class="btn btn-success"><i class="bi bi-plus me-1"></i>Add Category</a>
            </div>
        <hr />
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <th>Id</th>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDisplayOrder</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pen-fill me-2"></i>Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-x-circle me-2"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
</table>
@if (Model.Count == 0)
{
    <div class="text-center">
        <h5 class="text-secondary">It's lonely around here :(</h5>
        <p class="text-secondary">Click on <i class="bi bi-plus me-1"></i>Add Category</p>
    </div>
}