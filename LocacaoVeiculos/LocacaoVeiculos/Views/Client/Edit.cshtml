@model Client
<!--
	post não mostra os dados pegos no url apesar de ser bem mais lento,
	o get mostra e é bem mais rápido.
	mexendo sem login, use o post por questões de segurança
-->
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row">
			<h1 class="mb-4 ms-3">Edit Client</h1>
			<hr />
		</div>

		<div class="mb-3">
			<label>Client Name</label>
			<input asp-for="ClientName" class="form-control" />
		</div>
		<div class="mb-3">
			<label>Display Order</label>
			<input asp-for="ClientContactNum" class="form-control" />
		</div>

		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-primary form-control">Edit</button>
			</div>
			<div class="col-6">
				<a asp-controller="Client" asp-action="Index" class="btn btn-secondary form-control">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>