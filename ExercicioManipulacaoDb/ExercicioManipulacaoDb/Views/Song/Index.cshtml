@model List<Song>

<h1 class="mt-4">Songs List</h1>
<a href="#" class="btn btn-success my-3"><i class="bi bi-plus-square me-2"></i>Adicionar Jogo</a>
<hr />
<table class="table table-bordered table-striped">
    <thead>
        <th>Id</th>
        <th>Song Name</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Actions</th>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>@item.Genre</td>
                <td>
                    <a href="#" class="btn btn-primary btn-sm"><i class="bi bi-pen-fill me-2"></i>Edit</a>
                    <a href="#" class="btn btn-danger btn-sm"><i class="bi bi-x-circle me-2"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>