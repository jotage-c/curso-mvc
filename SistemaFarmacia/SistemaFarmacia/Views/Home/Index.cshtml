@model List<Company>

	<div class="container">
		<div class="row">
			<div class="col-10">
				<h1 class="ms-3">Pharmacy Manager</h1>
			</div>
			<div class="col">
				<!--adicionar farmácia-->
				<a asp-controller="Home" asp-action="Add" class="btn btn-success">Add Pharmacy</a>
			</div>
			<hr />
		</div>
		
		<table class="table table-striped table-bordered">
			<thead>
				<th>Id</th>
				<th>Pharmacy Name</th>
				<th>Pharmacy Address</th>
				<th>Pharmacy Work Hour</th>
			</thead>
			<tbody>
				@if(Model != null)
				{
					@foreach (var item in Model)
					{
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Address</td>
						<td>@item.WorkHour</td>
					}
				}
				
			</tbody>
		</table>
	</div>
	
