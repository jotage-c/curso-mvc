@model Reserva
@{
	int idDaMesa = (int)TempData["iddamesa"]!;
	int numeroDeLugares = (int)TempData["numeroDeLugares"]!;
}

<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="ms-3">Criar Reserva</h1>
			<hr />
		</div>

		<form method="post">

			<label>No da Mesa</label>
			<input name="IdMesa" class="form-control" value="@idDaMesa" readonly />

			<label>No de Clientes</label>
			<input name="NumeroClientes" class="form-control" value="@numeroDeLugares" readonly />

			<label>Horário</label>
			<input asp-for="Horario" class="form-control" />

			<label>Nome dos Clientes</label>
			@for (int i = 0; i < numeroDeLugares; i++)
			{
				<input name="NomeClientes[@i]" type="text" class="form-control" />
			}

			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>