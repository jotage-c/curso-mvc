@model List<Reserva>

<div class="container">
	<div class="row mb-3 align-items-center">
		<div class="col-10">
			<h1 class="ms-3">Lista de Reservas</h1>
		</div>
		<div class="col">
			<a class="btn btn-success" asp-action="Create">Criar Reserva</a>
		</div>
	</div>

	<hr />

	<table class="table table-bordered table-striped text-center">
		<thead>
			<tr>
				<td>Id da Reserva</td>
				<td>N° da Mesa</td>
				<td>Horário</td>
				<td>N° de Clientes</td>
				<td>Nome dos Clientes</td>
				<td>Ações</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.IdMesa</td>
					<td>@item.Horario</td>
					<td>@item.NumeroClientes</td>
					<td>
						@foreach(string name in item.NomeClientes)
						{
							@name
							<hr />
						}
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

