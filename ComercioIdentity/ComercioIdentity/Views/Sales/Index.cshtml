@model IEnumerable<ComercioIdentity.Models.Sale>

@{
    ViewData["Title"] = "Vendas Realizadas";
    if (TempData["success"] != null)
    {
        <div class="alert alert-dismissable alert-warning">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Registrar Nova Venda</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.Date.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@sale.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
