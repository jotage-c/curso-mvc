@model Course

<form method="post">
	<div class="row">
		<h1 class="pt-3 ps-4">Add Course</h1>
		<hr />
	</div>

	<div class="container">
		<div class="mb-3">
			<label>Course Name</label>
			<input asp-for="CourseName" class="form-control" />
		</div>
		<div class="mb-3">
			<label>Course Code</label>
			<input asp-for="CourseCode" class="form-control" />
		</div>
		<div class="mb-3">
			<label>Course Price</label>
			<input asp-for="CoursePrice" class="form-control" />
		</div>
		<div class="mb-3">
			<label>Course Type</label>
			<input asp-for="CourseType" class="form-control" />
		</div>

		<button type="submit" class="btn btn-success">Add</button>
		<a asp-controller="Course" asp-action="Index" class="btn btn-dark">Back to List</a>
	</div>
</form>