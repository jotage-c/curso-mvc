@model List<Professor>

<div class="container">
	<div class="row align-items-center">
		<div class="col-9">
			<h1 class="py-3 ps-3">Manage Professors</h1>
		</div>
		<div class="col">
			<a asp-controller="Professor" asp-action="Create" class="btn btn-light">
				<i class="bi bi-plus-square me-2"></i> Add Professor
			</a>
		</div>
		<hr />
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<th>Professor Id</th>
		<th>Professor Name</th>
		<th>Professor Telephone Number</th>
		<th>Professor Email</th>
		<th>Professor Work Period</th>
		<th>Actions</th>
	</thead>

	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ProfessorId</td>
			<td>@item.ProfessorName</td>
			<td>@item.ProfessorTel</td>
			<td>@item.ProfessorEmail</td>
			<td>@item.ProfessorWorkPeriod</td>
			<td>
				<div class="row px-3">
					<a href="#" class="btn btn-light btn-sm"><i class="bi bi-pen-fill pb-4"></i>Edit</a>
					<a href="#" class="btn btn-danger btn-sm"><i class="bi bi-x-circle"></i>Delete</a>
				</div>
			</td>
		</tr>
	}
	</tbody>
</table>